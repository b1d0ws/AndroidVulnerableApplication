<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecretArea">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="101dp"
        android:layout_marginBottom="46dp"
        android:text="Enter the correct PIN"
        android:textColor="#534949"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/editTextPinSecret"
        app:layout_constraintStart_toStartOf="@+id/editTextPinSecret"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextPinSecret"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:hint="PIN"
        android:inputType="textPersonName"
        android:padding="12sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonEnter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <Button
        android:id="@+id/buttonEnter"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginBottom="64dp"
        android:backgroundTint="#00d78e"
        android:text="Enter"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewSecretArea"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPinSecret" />

    <TextView
        android:id="@+id/textViewSecretArea"
        android:layout_width="244dp"
        android:layout_height="67dp"
        android:layout_marginBottom="135dp"
        android:text="You shall not pass!"
        android:textAlignment="center"
        android:textColor="#534949"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonEnter" />

</androidx.constraintlayout.widget.ConstraintLayout>